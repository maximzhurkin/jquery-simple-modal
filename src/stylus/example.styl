color_main = #111111
color_thin = #f6f8fa
color_link = #0074d9

container()
	margin-left auto
	margin-right auto
	padding-left 16px
	padding-right 16px
	max-width 640px

html,
body
	margin 0
	padding 0
	font-family -apple-system, system-ui, "Segoe UI", sans-serif
	color color_main
	-webkit-text-size-adjust 100%
	-webkit-font-smoothing antialiased

.link
	color color_link
	text-decoration none
	display inline-block
	line-height (24 / 16em)
	border-bottom 2px solid rgba(color_link, .25)
	transition border-color .25s ease-in-out
	&--dotted
		border-bottom 2px dotted rgba(color_link, .25)
	.no-touch &:hover
		border-color color_link

pre,
p
	line-height (24 / 16em)

pre
	box-sizing border-box
	width 100%
	padding 0
	margin 0
	overflow auto
	overflow-y hidden
	font-size 13px
	line-height 20px
	background-color color_thin
	padding 10px
	color color_main
	border-radius 6px

.header
	margin-bottom 64px
	padding-top 64px
	&__container
		container()
	&__heading
		margin-bottom 16px
		font-size (40 / 16em)
		font-weight 900
		line-height (48 / 40em)
	&__description
		margin-bottom 16px
		font-size (24 / 16em)
		line-height (30 / 24em)
		font-weight 200
	&__link
		margin-right 24px
		display inline-block
		font-weight 700
		&:last-child
			margin-right 0

.usage
	margin-bottom 64px
	&__container
		container()
	&__heading
		margin-bottom 24px
		font-size (30 / 16em)
		font-weight 700
		line-height (36 / 30em)

.demo
	margin-bottom 64px
	&__container
		container()
	&__heading
		margin-bottom 24px
		font-size (30 / 16em)
		font-weight 700
		line-height (36 / 30em)
	&__link
		margin-bottom 16px
		font-weight 700
		&:last-child
			margin-bottom 0

.footer
	padding-bottom 48px
	&__container
		container()
	&__copyright
		margin-bottom 24px
		font-size (12 / 16em)
		font-weight 300
	&__link
		margin-right 8px
		margin-bottom 6px
		display inline-block
		&:last-child
			margin-right 0

.my-content
	font-size (14 / 16em)
	line-height (24 / 16em)
	p
		margin-top 0
		margin-bottom 16px
		padding 0
		&:last-child
			margin-bottom 0
